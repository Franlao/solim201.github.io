---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroSection from '../../components/HeroSection.astro';
import SkillsMatrix from '../../components/SkillsMatrix.astro';
import ExperienceTimeline from '../../components/ExperienceTimeline.astro';
import ProjectsShowcase from '../../components/ProjectsShowcase.astro';
import CertificationsBadges from '../../components/CertificationsBadges.astro';
import ContactCTA from '../../components/ContactCTA.astro';
import ChatInterface from '../../components/ChatInterface.astro';
import ScrollToTop from '../../components/ScrollToTop.astro';
---

<BaseLayout 
  title="Solim LAOKPEZI - AI Engineer & Data Scientist"
  description="AI Engineer and Data Scientist specialized in generative AI, LLM, RAG and Deep Learning. Expert in artificial intelligence solutions for automotive and healthcare."
>
  <main class="min-h-screen bg-gradient-to-br from-dark-900 via-dark-800 to-dark-900 text-white overflow-hidden">
    <!-- Background Elements -->
    <div class="fixed inset-0 bg-ai-grid opacity-10 pointer-events-none"></div>
    <div class="fixed inset-0 bg-gradient-radial from-primary-500/5 via-transparent to-transparent pointer-events-none"></div>
    
    <!-- Hero Section -->
    <HeroSection />
    
    <!-- Skills Matrix -->
    <SkillsMatrix />
    
    <!-- Experience Timeline -->
    <ExperienceTimeline />
    
    <!-- Projects Showcase -->
    <ProjectsShowcase />
    
    <!-- Certifications -->
    <CertificationsBadges />
    
    <!-- Chat Interface RAG -->
    <ChatInterface />
    
    <!-- Contact CTA -->
    <ContactCTA />
    
    <!-- Scroll to Top Button -->
    <ScrollToTop />
  </main>
</BaseLayout>

<style>
  /* Global AI Theme Styles */
  html {
    scroll-behavior: smooth;
  }
  
  .ai-particle {
    position: fixed;
    pointer-events: none;
    z-index: 0;
  }
  
  .ai-particle::before {
    content: '';
    position: absolute;
    width: 2px;
    height: 2px;
    background: #22c55e;
    border-radius: 50%;
    box-shadow: 0 0 6px #22c55e;
    animation: pulse-slow 4s infinite;
  }
  
  .glassmorphism {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .ai-glow {
    box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
  }
  
  .typing-cursor::after {
    content: '|';
    animation: blink-caret 1s step-end infinite;
  }
</style>

<script>
  // Particle system for AI effect
  function createParticles() {
    const particleCount = 50;
    const particles = [];
    
    for (let i = 0; i < particleCount; i++) {
      const particle = document.createElement('div');
      particle.className = 'ai-particle';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.top = Math.random() * 100 + '%';
      particle.style.animationDelay = Math.random() * 4 + 's';
      document.body.appendChild(particle);
      particles.push(particle);
    }
    
    return particles;
  }
  
  // Initialize particles when page loads
  document.addEventListener('DOMContentLoaded', createParticles);
</script>